    <div class="container">
        <form method="post" action="/aluguel">


            <input type="text" id="locatario" name="locadora" class="input-field" placeholder="locadora">
            <input type="text" id="locadora" name="locatario" class="input-field" placeholder="locatario">
            <input type="text" id="endereco" name="endereco" class="input-field" placeholder="endereco do imóvel">

            <input type="submit" value="Gerar Contrato" class="submit-button">

        </form>
    </div>
</body>

</html>